<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".fragments.ui.AddPostFragment">

    <Button
        android:id="@+id/post_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="650dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_publish"
        android:backgroundTint="#7C98C2"
        android:text="post"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:padding="6dp">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/profile_user" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@id/linear1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingLeft="3dp"
            android:paddingTop="5dp"
            android:text="Razan S. Abu Shaban"
            android:textColor="#7C98C2"
            android:textSize="16sp"
            android:typeface="serif"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:entries="@array/Donations"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/title_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="title"
            android:padding="10dp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textColorHint="#7C98C2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <EditText
            android:id="@+id/description_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:padding="10dp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textColorHint="#7C98C2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="normal"
            tools:ignore="DuplicateIds" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_below="@+id/linear4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_post1"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:src="@drawable/layers" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear6"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignBottom="@+id/linear3"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/linear3"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_post2"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:src="@drawable/layers"
            android:layout_marginBottom="3dp"/>

        <ImageView
            android:id="@+id/image_post3"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:src="@drawable/layers"
            android:layout_marginTop="3dp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_don"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:text="Donation"
                android:textColor="#7C98C2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:theme="@style/mySwitch"
                android:typeface="serif" />

            <RadioButton
                android:id="@+id/radio_req"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp"
                android:text="Request"
                android:textColor="#7C98C2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:theme="@style/mySwitch"
                android:typeface="serif" />
        </RadioGroup>

    </LinearLayout>

