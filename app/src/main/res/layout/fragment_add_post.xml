<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".fragments.ui.AddPostFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/post_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_520sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/button_publish"
                android:backgroundTint="@color/blue"
                android:typeface="serif"
                 android:text="post"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile_user" />
            </LinearLayout>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@id/linear1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_3sdp"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingTop="@dimen/_5sdp"
                android:text="Razan S. Abu Shaban"
                android:textColor="@color/blue"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                android:typeface="serif" />


            <LinearLayout
                android:id="@id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:layout_below="@+id/user_name"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/image_post1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/image_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_add" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/image_post2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:clickable="false"
                    android:focusable="false"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/image_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_add" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/image_post3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:clickable="false"
                    android:focusable="false"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/_10sdp">


                    <ImageButton
                        android:id="@+id/image_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_add" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_below="@+id/image"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/_10sdp">

                <EditText
                    android:id="@+id/title_post"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                     android:hint="Title"
                    android:padding="@dimen/_5sdp"
                    android:paddingStart="@dimen/_15sdp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="@dimen/_13ssp"
                     android:typeface="serif" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/dec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:minHeight="@dimen/_45sdp"
                app:cardCornerRadius="@dimen/_10sdp">

                <EditText
                    android:id="@+id/description_post"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@null"
                     android:hint="Description"
                    android:padding="10dp"
                    android:paddingStart="@dimen/_10sdp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="@dimen/_13ssp"
                    android:typeface="serif"  />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/spinner_post"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_below="@+id/dec"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp">


                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:typeface="serif"/>


            </androidx.cardview.widget.CardView>


            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner_post"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio_don"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                     android:text="Donation"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:theme="@style/mySwitch"
                    android:typeface="serif"
                    android:buttonTint="@color/blue" />

                <RadioButton
                    android:id="@+id/radio_req"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                     android:text="Request"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:theme="@style/mySwitch"
                    android:typeface="serif"
                    android:buttonTint="@color/blue"
                    />
            </RadioGroup>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>