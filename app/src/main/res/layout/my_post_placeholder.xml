<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/rv_post_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@color/white"
            app:cardCornerRadius="@dimen/_20sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_200sdp"
                android:background="#808080">

                <View
                    android:id="@+id/imageSlider_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    android:background="#dddddd"
                    tools:ignore="MissingConstraints" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/u_img_post_placeholder"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_150sdp"
                    android:scaleType="fitXY"
                    app:cardBackgroundColor="#dddddd"
                    app:cardCornerRadius="@dimen/_20sdp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/u_name_post_placeholder"
                    android:layout_width="@dimen/_95sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:background="#dddddd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    app:layout_constraintStart_toEndOf="@+id/u_img_post_placeholder"
                    app:layout_constraintTop_toTopOf="@+id/u_img_post_placeholder" />

                <TextView
                    android:id="@+id/u_date_post_placeholder"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_1ssp"
                    android:background="#dddddd"
                    android:fontFamily="@font/din_next_arabic_medium"
                    android:textColor="@color/color_app"
                    android:textSize="@dimen/_8ssp"
                    app:layout_constraintStart_toEndOf="@+id/u_img_post_placeholder"
                    app:layout_constraintTop_toBottomOf="@+id/u_name_post_placeholder" />

                <TextView
                    android:id="@+id/post_status_placeholder"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="#dddddd"
                    android:gravity="center"
                    android:textSize="@dimen/_8sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.847"
                    app:layout_constraintStart_toEndOf="@+id/comment_btn1_placeholder"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.871" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/comment_btn1_placeholder"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/button_profile1"
                    android:fontFamily="@font/din_next_arabic_bold"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp"
                    app:cardBackgroundColor="#dddddd"
                    app:cardCornerRadius="@dimen/_60sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/u_name_post_placeholder"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.871" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@color/white"
            app:cardCornerRadius="@dimen/_20sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_200sdp"
                android:background="#808080">

                <View
                    android:id="@+id/imageSlider2_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    android:background="#dddddd"
                    tools:ignore="MissingConstraints" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/u_img_post2_placeholder"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_150sdp"
                    android:scaleType="fitXY"
                    app:cardBackgroundColor="#dddddd"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/u_name_post2_placeholder"
                    android:layout_width="@dimen/_95sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:background="#dddddd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    app:layout_constraintStart_toEndOf="@+id/u_img_post2_placeholder"
                    app:layout_constraintTop_toTopOf="@+id/u_img_post2_placeholder" />

                <TextView
                    android:id="@+id/u_date_post2_placeholder"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_1ssp"
                    android:background="#dddddd"
                    android:fontFamily="@font/din_next_arabic_medium"
                    android:textColor="@color/color_app"
                    android:textSize="@dimen/_8ssp"
                    app:layout_constraintStart_toEndOf="@+id/u_img_post2_placeholder"
                    app:layout_constraintTop_toBottomOf="@+id/u_name_post2_placeholder" />

                <TextView
                    android:id="@+id/post_status2_placeholder"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="#dddddd"
                    android:gravity="center"
                    android:textSize="@dimen/_8sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.847"
                    app:layout_constraintStart_toEndOf="@+id/comment_btn2_placeholder"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.871" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/comment_btn2_placeholder"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/button_profile1"
                    android:fontFamily="@font/din_next_arabic_bold"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp"
                    app:cardBackgroundColor="#dddddd"
                    app:cardCornerRadius="@dimen/_60sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/u_name_post2_placeholder"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.871" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>