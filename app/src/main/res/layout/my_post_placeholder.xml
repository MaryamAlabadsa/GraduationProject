<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rv_post_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@color/white"
            android:backgroundTint="#808080"
            app:cardCornerRadius="@dimen/_20sdp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/slider_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingBottom="@dimen/_12sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_post_des_image_slider_placeholder1">

                    <View
                        android:id="@+id/imageSlider_placeholder1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_140sdp"
                        android:background="#dddddd"
                        tools:ignore="MissingConstraints" />
                    <ImageButton
                        android:id="@+id/post_status_placeholder1"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="26dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/deadline"
                        android:gravity="center"
                        android:textSize="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageSlider_placeholder1"
                        app:tint="#dddddd" />

                    <TextView
                        android:id="@+id/comment_btn_placeholder1"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/comment"
                        android:backgroundTint="#dddddd"
                        android:gravity="center"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_7sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageSlider_placeholder1" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/tv_post_title_image_slider_placeholder1"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:background="#dddddd"
                    android:typeface="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/u_img_post_placeholder1" />

                <TextView
                    android:id="@+id/tv_post_des_image_slider_placeholder1"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_10ssp"
                    android:typeface="normal"
                    android:background="#dddddd"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_post_title_image_slider_placeholder1" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/u_img_post_placeholder1"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="fitXY"
                    app:cardBackgroundColor="#dddddd"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />


                <TextView
                    android:id="@+id/u_name_post_placeholder1"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="#dddddd"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/u_img_post_placeholder1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/u_date_post_placeholder1"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/color_app"
                    android:textSize="@dimen/_8ssp"
                    android:layout_marginTop="4dp"
                    android:background="#dddddd"
                    app:layout_constraintStart_toEndOf="@+id/u_img_post_placeholder1"
                    app:layout_constraintTop_toBottomOf="@+id/u_name_post_placeholder1" />

                <ImageView
                    android:id="@+id/post_menu_placeholder1"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/post_menu"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#dddddd" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>