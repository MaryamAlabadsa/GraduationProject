<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:visibility="visible"
    style="@style/AppTheme.NoActionBar"
    tools:context=".fragments.ui.ProfileFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="900dp"
                android:layout_marginTop="-730dp"
                android:background="@drawable/profile_shape1"
                tools:ignore="MissingConstraints">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_back"
                android:background="@null"
                  />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_85sdp"
        android:background="@drawable/profile_stroke"
        android:padding="2dp"
        android:src="@drawable/profile_user" />

    <EditText
        android:id="@+id/user_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:clickable="false"
        android:enabled="false"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:padding="@dimen/_10sdp"
        android:text="Razan S. Abu Shaban"
        android:textColor="@color/blue"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        android:typeface="serif" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@id/user_name_text"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_20sdp"
         android:layout_marginEnd="@dimen/_20sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_request_posts_num"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:gravity="end|center"
            android:padding="@dimen/_4sdp"
            android:text="255"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:typeface="serif"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/request_desc"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:gravity="start|center"
            android:includeFontPadding="false"
            android:text="Request"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_15ssp"
            android:typeface="serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_request_posts_num"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_donation_posts_num"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_44sdp"
            android:gravity="end|center"
            android:padding="@dimen/_4sdp"
            android:text="75K"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:typeface="serif"
            app:layout_constraintEnd_toStartOf="@+id/donation_desc"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/donation_desc"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:gravity="start|center"
            android:includeFontPadding="false"
            android:text="Donation"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_15ssp"
            android:typeface="serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.466"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@id/linearLayout"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/button_profile2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/btn_request_post"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                 android:gravity="center"
                android:text="Request"
                android:textColor="@color/blue"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="parent"
                android:typeface="serif"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/btn_donation_post"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                 android:gravity="center"
                android:text="Donation"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/blue"
                android:typeface="serif"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />


        </LinearLayout>

        <View
            android:id="@+id/line_view"
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:background="@color/blue"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_posts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/constraintLayout"
         app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.051" />

    <ImageButton
        android:id="@+id/edit_user_name"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignTop="@id/user_name_text"
        android:layout_alignBottom="@id/user_name_text"
        android:layout_toEndOf="@+id/user_name_text"
        android:background="@null"
        android:gravity="center"
        android:src="@drawable/ic_edit"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/save_edit_user_name"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:visibility="gone"
        android:layout_alignTop="@id/user_name_text"
        android:layout_alignBottom="@id/user_name_text"
        android:layout_toEndOf="@+id/user_name_text"
        android:gravity="center"
        android:background="@null"
        android:src="@android:drawable/checkbox_on_background" />
    <!--set the custom progress bar here in
      the indeterminateDrawable attribute-->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress_bg"
        android:indeterminateTint="@color/blue"
        android:indeterminateTintMode="src_atop"
        android:progress="0" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>