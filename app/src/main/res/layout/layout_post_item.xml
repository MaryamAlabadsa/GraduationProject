<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_20sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_200sdp">

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="@dimen/_14sdp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="@dimen/_2sdp"
            app:sliderIndicatorRadius="@dimen/_2sdp"
            app:sliderIndicatorSelectedColor="@color/bink"
            app:sliderIndicatorUnselectedColor="@color/light_blue"
            app:sliderScrollTimeInSec="1"
            app:sliderStartAutoCycle="true"
            tools:ignore="MissingConstraints" />

        <TextView
            app:layout_constraintRight_toRightOf="@+id/imageSlider"
            app:layout_constraintTop_toTopOf="@id/imageSlider"
            android:id="@+id/number_requests_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:text="TextView"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints" />
        <LinearLayout
            android:id="@+id/fl_shadow_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/imageSlider"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_post_title_image_slider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:gravity="center|start"
                android:textColor="@color/white"
                android:typeface="serif"
                android:textSize="@dimen/_15ssp" />


            <TextView
                android:id="@+id/tv_post_des_image_slider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:textStyle="bold"
                android:typeface="serif"
                android:gravity="center|start"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/u_img_post"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_marginTop="@dimen/_150sdp"
            android:layout_marginStart="@dimen/_10sdp" />

        <TextView
            android:id="@+id/u_name_post"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="TextView"
            android:textSize="@dimen/_8ssp"
            android:typeface="serif"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/u_img_post"
            app:layout_constraintTop_toTopOf="@+id/u_img_post" />
        <TextView
            android:id="@+id/u_date_post"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="TextView"
            android:textSize="@dimen/_8ssp"
            android:fontFamily="@font/din_next_arabic_medium"
            android:textColor="@color/bink"
            android:layout_marginTop="@dimen/_1ssp"
            app:layout_constraintStart_toEndOf="@+id/u_img_post"
            app:layout_constraintTop_toBottomOf="@+id/u_name_post" />

        <TextView
            android:id="@+id/post_status"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.847"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/_5sdp"
            app:layout_constraintStart_toEndOf="@+id/comment_btn"
            android:layout_marginRight="@dimen/_25sdp"
            app:layout_constraintVertical_bias="0.871" />


        <TextView
            android:id="@+id/comment_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/button_profile1"
            android:fontFamily="@font/din_next_arabic_bold"
            android:gravity="center"
            android:text="TextView"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/u_name_post"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.871" />

       </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>